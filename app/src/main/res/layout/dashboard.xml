<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/button_lock"
        android:layout_width="109dp"
        android:layout_height="123dp"
        android:text="@string/lock"
        app:backgroundTint="#E91E63"
        app:cornerRadius="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <Button
        android:id="@+id/button_light_off"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:text="@string/light_off"
        app:backgroundTint="#E91E63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toEndOf="@+id/button_light_on"
        app:layout_constraintTop_toBottomOf="@+id/button_unlock"
        app:layout_constraintVertical_bias="0.057" />

    <Button
        android:id="@+id/button_unlock"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:text="@string/unlock"
        app:backgroundTint="#E91E63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toEndOf="@+id/button_lock"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184" />

    <Button
        android:id="@+id/button_light_on"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:text="@string/light_on"
        app:backgroundTint="#E91E63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.229"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_lock"
        app:layout_constraintVertical_bias="0.057" />

    <Button
        android:id="@+id/button_goto_set_speed"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginBottom="40dp"
        android:text="@string/set_speed"
        app:backgroundTint="#E91E63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_goto_login"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:text="@string/log_in_with_cby"
        app:backgroundTint="#E91E63"
        app:layout_constraintBottom_toTopOf="@+id/button_goto_set_speed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>